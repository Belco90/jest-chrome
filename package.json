{
  "name": "@bumble/jest-chrome",
  "version": "0.4.0",
  "description": "Test Chrome extensions with Jest. A complete mock of the Chrome API.",
  "keywords": [
    "api",
    "chrome",
    "chromium",
    "extension",
    "jest",
    "mock",
    "test",
    "typescript"
  ],
  "repository": "bumble-org/jest-chrome",
  "license": "MIT",
  "author": "Jack Steam <jacksteamdev@gmail.com>",
  "files": [
    "lib",
    "types"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "run-p build:pro build:types build:copy",
    "build:copy": "copyfiles -f src/jest-chrome.d.ts types",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:pro": "rollup -c --environment NODE_ENV:production",
    "build:types": "tsc -p tsconfig.d.json",
    "build:watch": "npm run build:dev -- -w",
    "release:beta": "git push && npm publish --tag beta",
    "release:full": "git push && npm publish",
    "start": "run-p build:watch",
    "test": "jest",
    "preversion": "run-s test build"
  },
  "dependencies": {
    "@bumble/chrome-rxjs": "^0.10.1",
    "@types/chrome": "^0.0.92",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-typescript": "^2.1.0",
    "@sucrase/jest-plugin": "^2.0.0",
    "@types/filesystem": "^0.0.29",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.9.0",
    "@types/jest-in-case": "^1.0.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.7",
    "@types/power-assert": "^1.5.3",
    "@types/puppeteer": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "chrome-promise": "^3.0.5",
    "copyfiles": "^2.2.0",
    "delay": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.6.0",
    "fs-extra": "^8.1.0",
    "jest-in-case": "^1.0.2",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.29.0",
    "ts-jest": "^24.3.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "jest": "^24.9.0"
  }
}
